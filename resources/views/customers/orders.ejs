<section class="orders section-light">
<div class="container mx-auto">
    <h2 class="font-bold text-xl mb-4">All Orders</h2>

<%if(success_msg!=''){%>
        <div id='success-alert' class='flex h-8 items-center bg-green-500 text-white font-bold text-sm py-2 px-3 mb-4' role="alert">
            <svg class="fill-current w-4 h-4 mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                <path
                    d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z" />
            </svg>
            <p class='text-md pt-3'><%=success_msg%></p>
        </div>
<%}%>

    <table class="w-full bg-white table-auto"  >
        <thead class='h-4'>
            <tr >
                <th text-left pt-2 px-3>Orders</th>
                <th text-left pt-2 px-3>Phone number</th>
                <th text-left pt-2 px-3>Address</th>
                <th text-left pt-2 px-3>Time</th>
            </tr>
        </thead>
        <tbody>
            <%if(orders.length){%>
            <% orders.forEach(order=>{%>

                <tr>
                    <td class="border px-4 py-2">
                        <a class="link" href="/customer/orders/<%=order._id%>"><%=order._id%></a>
                    </td>
                    <td class="border px-4 py-2">
                        <%=order.phonenumber%>
                    </td>
                    <td class="border px-4 py-2">
                        <%=order.address%>
                    </td>
                    <td class="border px-4 py-2">
                        <%=moment(order.createdAt).format('hh:mm A')%>
                    </td>
                </tr>
            <%})%>
            <%}else{%>
                <tr>
                    <td class="p-4"><span>No orders found</span></td>
                </tr>
            <% }%>

           

        </tbody>

    </table>
</div>
    



</section>