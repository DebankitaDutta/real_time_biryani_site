<!-- hero-section -->
<section class="hero py-10"> 
    <%-include('./partials/messages')%> 
    <div class="container mx-auto flex items-center justify-between">
        <div class='w-1/2'>
            <h6 class="text-lg md:text-2xl font-bold"><em> Are you hungry ?</em></h2>
            <h1 class="text-3xl md:text-6xl font-bold">Don't wait</h1>
            <button class="font-bold text-lg rounded-full px-3 lg:px-5 py-2 mt-3 btn-primary ">
              <a class="text-white" href="#menu-body"style="
              text-decoration: none;">Order now</a>  
            </button>
        </div>
        <div class='w-1/3 lg:w-1/2'>
            <img src="/img/biryaniPic.jpg" alt="biryani_pic">
        </div>
    </div>
</section>

<!-- menu section -->
<section id="menu-body" class="menu container py-3 mx-auto">
    <h1 class="text-xl font-bold mb-6">Biryani Items</h1>
    <div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">
        <% biryaniMenus.forEach(function(biryani){%>
        <div class="w-full md:w-64">
            <img class="h-40 w-40 mx-auto" src="/img/<%=biryani.image%>" alt="menu-item1" >
            <div class="text-center">
                <h2 class="text-xl mb-2"><%=biryani.name%></h2>
                <span class="px-3 size rounded-full py-1 uppercase text-xs"><%=biryani.plate%></span>
                <div class="my-3 flex items-center justify-around">
                    <span class="font-bold">â‚¹<%=biryani.price%></span>
                    <button data-biryani="<%= JSON.stringify(biryani)%>"class="btn-primary flex items-center py-1 px-6 mt-2 add-to-cart rounded-full">
                        <span class="">+</span>
                        <span class="ml-3 ">Add</span>
                    </button>
                </div>
            </div>
        </div>
        
        <%})%>
    </div>
</section>